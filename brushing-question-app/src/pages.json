{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^uni-popup": "@dcloudio/uni-ui/lib/uni-popup/uni-popup.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "刷题宝",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/category/index",
      "style": {
        "navigationBarTitleText": "题目分类",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/practice/index",
      "style": {
        "navigationBarTitleText": "刷题练习",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "个人中心",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/practice/do",
      "style": {
        "navigationBarTitleText": "做题",
        "navigationStyle": "custom",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/search/result",
      "style": {
        "navigationBarTitleText": "搜索结果",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/category/questions",
      "style": {
        "navigationBarTitleText": "题目列表",
        "navigationStyle": "default"
      }
    },
    {
      "path": "pages/mine/study-plan",
      "style": {
        "navigationBarTitleText": "学习计划",
        "navigationStyle": "default"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "刷题宝",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#1890ff",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/images/tabbar/home.png",
        "selectedIconPath": "static/images/tabbar/home-active.png"
      },
      {
        "pagePath": "pages/category/index",
        "text": "分类",
        "iconPath": "static/images/tabbar/category.png",
        "selectedIconPath": "static/images/tabbar/category-active.png"
      },
      {
        "pagePath": "pages/practice/index",
        "text": "练习",
        "iconPath": "static/images/tabbar/practice.png",
        "selectedIconPath": "static/images/tabbar/practice-active.png"
      },
      {
        "pagePath": "pages/mine/index",
        "text": "我的",
        "iconPath": "static/images/tabbar/mine.png",
        "selectedIconPath": "static/images/tabbar/mine-active.png"
      }
    ]
  }
} 